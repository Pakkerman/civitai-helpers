{
  "manifest_version": 3,
  "name": "Civitai Helper",
  "description": "",
  "version": "0.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://civitai.com/*"],
      "js": [
        "content.js",
        "init.js",
        "overlays/toast.js",
        "actions/download.js",
        "actions/clickLike.js",
        "actions/autofillTags.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+Q"
      }
    },
    "generate": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "click the generate button"
    },
    "download": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "click the download button"
    },
    "createProject": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "fill in create project"
    }
  },

  "permissions": ["activeTab", "scripting", "commands"]
}
